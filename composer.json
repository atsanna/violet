{
    "name": "atsanna/violet",
    "type": "project",
    "description": "Violet framework based on CodeIgniter 4",
    "homepage": "https://codeigniter4.it",
    "license": "MIT",
    "authors": [
        {
            "name": "Antonio Sanna",
            "email": "a t s a n n a (at) t i s c a l i (dot) it",
            "homepage": "https://codeigniter4.it",
            "role": "Developer"
        }
    ],
	"config":{
		"secure-http":false,
		"preferred-install": "dist",
		"sort-packages": true,
		"optimize-autoloader": true
	},
	"minimum-stability": "dev",
    "require": {
        "php": ">=7.2",
        "codeigniter4/framework": "^4@rc",
		"codeguy/upload": "^1.3",
		"gettext/gettext": "^4.6.1",
		"jelix/jelix": "1.7.x-dev",
		"jelix/ldapdao-module": "v2.0.7",
		"jelix/properties-file": "^1.2.1",
		"lonnieezell/vulcan": "dev-develop",
		"myth/auth": "^1.0@beta",
		"scoumbourdis/phpexcel": "^1.9",
		"vlucas/valitron": "^1.2",
		"zendframework/zend-cache": "2.5.1",
		"zendframework/zend-db": "2.5.1",
		"zendframework/zend-servicemanager": "2.5.1"
    },
    "require-dev": {
        "mikey179/vfsstream": "1.6.*",
        "phpunit/phpunit": "^7.0",
		"mockery/mockery": "^1.0",
      	"codeigniter4/translations": "dev-develop",
		"sebastian/phpcpd": "^2.0"
    },
	"autoload-dev": {
		"psr-4": {
			"CIModuleTests\\Support\\": "tests/_support"
		}
	},
    "scripts": {
        "post-update-cmd": [
            "@composer dump-autoload"
        ]
    }
}
